<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="4dp"
    android:paddingRight="4dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_gravity="center"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="#ffffff"
        android:layout_height="180dp"
        android:layout_marginBottom="5dp"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:text="COLUMBIA ASIA"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:id="@+id/hospitalCardText"
                android:textColor="#000"
                android:textSize="24sp"
                android:gravity="center"
                android:background="@android:color/holo_green_dark"
                android:textStyle="normal|bold" />

            <TextView
                android:text="Dr. Saxena"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/DoctorCardText"
                android:textColor="#000"
                android:textSize="22sp"
                android:gravity="center" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_height="match_parent"
                    android:layout_width="170dp"
                    android:layout_marginLeft="5dp">

                    <TextView
                        android:text="5 k.m. away"
                        android:layout_height="25dp"
                        android:id="@+id/DistanceCardText"
                        android:textColor="#000"
                        android:layout_width="match_parent"
                        android:textSize="16sp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="15dp" />

                    <TextView
                        android:text="Waiting time 3 hrs"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:id="@+id/WaitingTimeCardText"
                        android:textColor="#000"
                        android:textSize="16sp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="15dp" />
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="170dp"
                    android:layout_height="match_parent">

                    <TextView
                        android:text="28"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/CurrentNumberCardText"
                        android:textColor="#000"
                        android:textSize="35sp"
                        android:gravity="center"
                        android:layout_marginTop="15dp"
                        android:textStyle="normal|bold" />

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>